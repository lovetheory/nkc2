//refer to forum object as f, count as index..

if index%6==0
  .clearfix.visible-lg-block
if index%4==0
  .clearfix.visible-md-block
if index%3==0
  .clearfix.visible-sm-block
if index%2==0
  .clearfix.visible-xs-block
//above are necessary when some columns are shorter than others

.col-lg-2.col-md-3.col-xs-6.col-sm-4.HomeForumContainer
  .HomeForumTitle
    .HomeForumTitlePrimary
      a.f16(href='/forum/#{f._key}') #{f.display_name}
    .HomeForumTitleSecondary
      if f.count_posts_today > 0
        span.lighttext ä»Š #{f.count_posts_today||""}
  hr.hrNarrowSpace(style='border-color:##{groupcolor};')
  each thread,index in f.threads
    .HomeThreadItem.f12
      - var avatar = '/avatar/' + thread.oc.uid
      .HomeThreadAvatarPosition
        a(href='/thread/#{thread._key}')
          img.avatar.HomeThreadAvatar(src='#{avatar}')
        
      .HomeThreadText
        a(href='/thread/#{thread._key}')
          span.HomeThreadTextInner #{thread.oc.t.slice(0,18)} 
      .HomeThreadTextRightAlign
        if thread.count>1
          span.lighttext.reddish.f12 #{thread.count-1}
