extends bootstrap_base.jade

block title
  title #{data.forum.display_name} - #{data.site.name}
  
  style.
    .marginless {
      margin-top:7px;
      margin-bottom:7px;
      margin-right:15px;
    }

block content        
  .container
    .row
      .col-md-2
        .panel.panel-default
          .panel-heading
            .f12 论坛列表
          .panel-body
            for i,index in data.forums
              if i._key == data.forum._key
                text > 
              a(href='/forum/#{i._key}').
                #{i.display_name} #[span.badge #{i.posts_today}]
              br
      .col-md-10
        //split 10/12 for post area
          
        .panel.panel-default
          .panel-body(style='padding-bottom:0px;')
            .row
              .col-md-12
                //img(src='http://bbs.kechuang.org/themes/site/dingzhi/images/logo.png')
                h1 #{data.forum.display_name}
            .row
              .col-xs-8
                p.
                  #{data.forum.description}
                a.btn.btn-default(href='/interface/editor?target=#{data.replytarget}') 发帖
              .col-xs-4
                p.
                  今日：#{data.forum.posts_today} 主题：#{data.forum.threads_total} 总帖：#{data.forum.posts_total}
                text 版主：
                for i,index in data.forum.owners
                  a.d-inline(href='#') #{index?', ':''}#{i.username}
                
            .row
              .col-md-12
                nav
                  ul.pagination.marginless
                    each val,index in [1,2,3,4,5,6,'>>']
                      if index==0
                        li.active
                          a(href='#')=val
                      else
                        li
                          a(href='#')=val
                  ul.pagination.marginless
                    each val,index in ['所有','精华']
                      if index==0
                        li.active
                          a(href='#')=val
                      else
                        li
                          a(href='#')=val
              
                  ul.pagination.marginless
                    each val,index in ['回复序','发布序']
                      if index==0
                        li.active
                          a(href='#')=val
                      else
                        li
                          a(href='#')=val
                
                  
          ul.list-group
            each thread,index in data.threads
              include interface_forum_singlethread.jade

                        
          .panel-body
            a.btn.btn-default(href='/interface/editor?target=#{data.replytarget}') 发帖                 
      
  include debug_output.jade
